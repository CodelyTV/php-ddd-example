<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="CodelyTv\Mooc\LastVideo\Domain\LastVideo" table="last_video">
        <id name="id" type="last_video_id" column="id" length="36" />

        <field name="courseId" column="course_id" type="course_id" />
        <field name="videoId" column="video_id" type="video_id" />

        <embedded name="type" class="CodelyTv\Mooc\LastVideo\Domain\LastVideoType" use-column-prefix="false" />
        <embedded name="title" class="CodelyTv\Mooc\LastVideo\Domain\LastVideoTitle" use-column-prefix="false" />
        <embedded name="url" class="CodelyTv\Mooc\LastVideo\Domain\LastVideoUrl" use-column-prefix="false" />
        <embedded name="createdAt" class="CodelyTv\Mooc\LastVideo\Domain\LastVideoCreatedAt" use-column-prefix="false" />
    </entity>

</doctrine-mapping>
